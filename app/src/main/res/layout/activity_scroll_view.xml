<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Unit1.ScrollView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Restaurant Images -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"

            android:text="Select your resturents "
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold"
            />

        <ImageView
            android:id="@+id/restaurant1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/res1"
            android:onClick="onRestaurantClick"
            android:padding="10dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="20dp"/>

        <ImageView
            android:id="@+id/restaurant2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/res2"
            android:onClick="onRestaurantClick"
            android:padding="10dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="20dp"/>

        <ImageView
            android:id="@+id/restaurant3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/res3"
            android:onClick="onRestaurantClick"
            android:padding="10dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="20dp"/>
        <ImageView
            android:id="@+id/restauran4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/res4"
            android:onClick="onRestaurantClick"
            android:padding="10dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="20dp"/>
        <ImageView
            android:id="@+id/restaurant5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/res5"
            android:onClick="onRestaurantClick"
            android:padding="10dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="20dp"/>



    </LinearLayout>



</ScrollView>